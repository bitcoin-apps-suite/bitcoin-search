{
  "name": "bitcoin-search",
  "version": "0.1.0",
  "description": "Advanced Search Engine for Bitcoin Blockchain Data",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3020",
    "build": "next build",
    "start": "next start -p 3020",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "kill:3000": "lsof -ti:3000 | xargs kill -9",
    "kill:dev": "lsof -ti:3000 | xargs kill -9 && lsof -ti:3001 | xargs kill -9",
    "kill:all": "for port in {3000..3010}; do lsof -ti:$port | xargs kill -9 2>/dev/null || true; done"
  },
  "keywords": [
    "bitcoin",
    "bsv",
    "blockchain",
    "search",
    "analytics",
    "data"
  ],
  "author": "Bitcoin Search Team",
  "homepage": "https://bitcoin-search.vercel.app",
  "dependencies": {
    "@bitcoin-os/bridge": "^2.0.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
